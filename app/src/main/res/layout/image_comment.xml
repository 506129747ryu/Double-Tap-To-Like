<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_comment_img"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="12.05.2014 | 14.00"
        android:id="@+id/item_comment_date"
        android:fontFamily="sans-serif-light"
        android:textSize="10sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:id="@+id/item_comment_like"
        >

        <ImageView
            android:id="@+id/item_comment_like_img"
            android:layout_marginTop="10dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/like_non_active">
        </ImageView>

        <TextView
            android:id="@+id/item_comment_like_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffCA4D40"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:fontFamily="sans-serif-light"
            android:layout_below="@id/item_comment_like_img"
            android:text="2 Likes" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/item_comment_like"
        android:layout_toRightOf="@id/item_comment_img"
        android:orientation="vertical"
        android:padding="5dp"
        android:id="@+id/linearLayout3">

        <TextView
            android:id="@+id/item_comment_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Cana Alberrona"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_comment_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:maxLength="140"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-light"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor.."
            android:textColor="@android:color/white" />

    </LinearLayout>


</RelativeLayout>